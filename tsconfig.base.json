      ],
      "@web-dev/boba-tracker/feature-dog-card": [
        "libs/boba-tracker/feature-dog-card/src/index.ts"
      ],
      "@web-dev/boba-tracker/ui": ["libs/boba-tracker/ui/src/index.ts"],
      "@web-dev/shared/data-access": ["libs/shared/data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
